# Managed by Puppet.  Changes are likely to be overwritten.

[Unit]
Description=Cassandra cluster manager
After=network.target

[Service]
PIDFile=/var/run/<%= @service_name %>/<%= @service_name %>-monitor.pid
User=cassandra
Group=cassandra
ExecStart=/etc/init.d/<%= @service_name %> start
StandardOutput=journal
StandardError=journal
LimitNOFILE=100000
LimitMEMLOCK=infinity
LimitNPROC=32768
LimitAS=infinity
Restart=always


[Install]
WantedBy=multi-user.target
